<section class="cart py-16">

    <% if(session.cart) { %>

    <div class='order container mx-auto px-10 w-1/2'>

        <div class="flex items-center border-b border-gray-300">

            <i class="fa fa-shopping-cart font-bold ml-4 py-2 text-2xl"></i>
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>

        </div>


        <div class="pizza-list">

        <% for(let pizza of Object.values(session.cart.items)) { %>

            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>

                <span class="flex-1"><%= pizza.Qty %></span>
                <span class="font-bold text-lg">&#x20B9;<%= pizza.item.price * pizza.Qty %></span>
            </div>

            <% } %>
 
        </div>

        <hr> 

        <div class='text-right py-4'>
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">&#x20B9;<%= session.cart.totalPrice %></span>
            </div>

            <% if(user) { %>

            <div>
                <form action="/orders" method="POST" class="mt-12"> 
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form> 
            </div>

            <% }else {%>

            <a href="" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>

            <% } %>
        </div>
 
    </div>

    <% }else { %>

    <div class="empty-cart py-10">

        <div class="container mx-auto text-center px-10">

            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.
                To order a pizza, go to the main page.
            </p>
    
           <center> <img src="/img/empty-cart.png" alt="Empty Cart"></center>
    
           <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
    
        </div>
    
    </div>

    <% } %>
</section>